<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Version>0.0.1-beta01</Version>
        <Authors>Andrew Sutton</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>F# bindings for the FluentUI library.</Description>
        <PackageTags>F# FSharp FS FluentUI</PackageTags>
        <PackageReleaseNotes>
            - Initial release
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Domain.fs" />
        <Compile Include="Utils.fs" />
        <Compile Include="FelizProps.fs" />
        <Compile Include="Props.fs" />
        <Compile Include="FluentUI.fs" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="*.fsproj; *.fs;" PackagePath="fable\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Update="FSharp.Core" Version="4.7.2" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Feliz" Version="2.6.0" />
    </ItemGroup>

    <PropertyGroup>
        <NpmDependencies>
            <NpmPackage Name="@fluentui/react-components" ResolutionStrategy="Max" />
        </NpmDependencies>
    </PropertyGroup>

</Project>
